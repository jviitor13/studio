rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer usuário autenticado leia e escreva arquivos.
    // Idealmente, restrinja isso ainda mais. Por exemplo, apenas o usuário
    // que fez o upload pode ler/deletar a imagem.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
