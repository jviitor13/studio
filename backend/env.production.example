# Configurações de Produção - RodoCheck Backend
# Copie este arquivo para .env e configure as variáveis

# =============================================================================
# CONFIGURAÇÕES BÁSICAS DO DJANGO
# =============================================================================

# Chave secreta do Django (OBRIGATÓRIO - gere uma nova chave segura)
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Modo debug (deve ser False em produção)
DEBUG=False

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost

# =============================================================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# =============================================================================

# Banco PostgreSQL
DB_NAME=rodocheck_prod
DB_USER=rodocheck_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer
DB_CONN_MAX_AGE=60

# =============================================================================
# CONFIGURAÇÕES DE CACHE E REDIS
# =============================================================================

# URL do Redis
REDIS_URL=redis://localhost:6379/1

# =============================================================================
# CONFIGURAÇÕES DE CELERY
# =============================================================================

# URLs do Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# CONFIGURAÇÕES DE GOOGLE OAUTH
# =============================================================================

# Credenciais do Google OAuth (OBRIGATÓRIO)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# CONFIGURAÇÕES DE IA
# =============================================================================

# Chaves de API para serviços de IA (opcional)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# CONFIGURAÇÕES DE GOOGLE DRIVE
# =============================================================================

# Configurações do Google Drive (opcional)
GOOGLE_DRIVE_CREDENTIALS_FILE=/opt/rodocheck/credentials/service-account.json
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# =============================================================================
# CONFIGURAÇÕES DE EMAIL
# =============================================================================

# Configurações de SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Configurações de SSL/HTTPS
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# =============================================================================
# CONFIGURAÇÕES DE CORS
# =============================================================================

# Origens permitidas para CORS (separadas por vírgula)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================

# Sentry DSN para monitoramento de erros (opcional)
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================

# Retenção de backups em dias
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Debug toolbar (apenas para desenvolvimento)
ENABLE_DEBUG_TOOLBAR=False

# =============================================================================
# CONFIGURAÇÕES DE HEALTH CHECK
# =============================================================================

# URL para health check
HEALTH_CHECK_URL=http://localhost:8000/api/health/

